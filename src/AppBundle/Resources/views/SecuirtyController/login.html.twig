{% extends "::base.html.twig" %}

{% block title %}AppBundle:SecuirtyController:login{% endblock %}

{% block body %}

<div class="jumbotron">
    <h1 class="text-center">Welcome to the SecurityController:login page</h1>

    <form class="" action="{{ path('login') }}" method="post">
        <div class="form-group-lg">
            <label for="username">Username: </label>
            <input type="text" name="username" value="{{ last_username }}"/>
        </div>

        <div class="form-group-lg">
            <label for="password">Password: </label>
            <input type="password" name="password" />
        </div>

        <div class="form-group-lg">
            <input class="" type="submit" value="Login" />
        </div>
    </form>

</div>
{% endblock %}
